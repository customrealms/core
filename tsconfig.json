{
	"compileOnSave": false,
	"compilerOptions": {
		"strict": true,
		"outDir": "./dist",
		"sourceMap": true,
		"declaration": true,
		"module": "esnext",
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"resolveJsonModule": true,
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"importHelpers": true,
		"target": "ES5",
		"lib": ["es2018", "dom"],
		"types": []
	},
	"include": ["src/**/*.ts"],
	"exclude": ["src/**/*.test.ts"]
}
